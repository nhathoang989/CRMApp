<UserControl x:Class="HCRM.App.Pages.ProductPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             >
    <UserControl.Resources>
        
    </UserControl.Resources>
    <Grid Style="{StaticResource ContentRoot}">
        <!-- TODO: set @SelectedSource -->
        <mui:ModernTab Layout="List" Style="{StaticResource SideMenuLink}"  SelectedSource="/Pages/Products/ListProduct.xaml">
            <mui:ModernTab.Links>
                <!-- TODO: set @Source -->
                <mui:Link DisplayName="Danh sách" Source="/Pages/Products/ListProduct.xaml" />
                <mui:Link DisplayName="Xuất hàng" Source="/Pages/Products/SaleProduct.xaml" />
                <mui:Link DisplayName="Nhập hàng" Source="/Pages/Products/ImportProduct.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
