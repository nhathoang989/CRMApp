<UserControl x:Class="HCRM.App.Pages.Products.ImportProduct"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:Controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:converter="clr-namespace:HCRM.App.Views.Converters" 
             xmlns:customControl="clr-namespace:HCRM.App.Views.CustomControls" 
             mc:Ignorable="d" 
             >   
    <Grid>
        <ScrollViewer>
            <StackPanel Name="rootForm" MinWidth="500">
                <StackPanel Orientation="Horizontal" Margin="20">
                    <TextBlock Text="Tìm kiếm" Style="{StaticResource Heading2}"/>
                    <Controls:AutoCompleteBox Margin="10 0" ItemsSource="{Binding Products}" 
                                              ValueMemberPath="Title"
                                              ItemFilter="{Binding ProductFilter}"
                                              IsTextCompletionEnabled="True"                                              
                                              SelectedItem="{Binding CurrentItem,Mode=OneWayToSource}"
                                              MinimumPrefixLength="1"
                                              MinimumPopulateDelay="100"
                                              VerticalAlignment="Center"
                                              Width="200"
                                              >
                        <Controls:AutoCompleteBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" />
                                    <TextBlock Text="{Binding Material}" />
                                </StackPanel>
                            </DataTemplate>
                        </Controls:AutoCompleteBox.ItemTemplate>
                    </Controls:AutoCompleteBox>
                </StackPanel>                
                <customControl:PaginDataGridView Width="Auto" />
                <StackPanel DataContext="{Binding CurrentItem}">
                <TextBlock Text="Chi tiết sản phẩm"  Style="{StaticResource Heading2}" Margin="10"/>
                <WrapPanel Orientation="Horizontal">
                    <WrapPanel.Resources>
                        <Style TargetType="StackPanel">
                            <Setter Property="Width" Value="350"/>
                            <Setter Property="Orientation" Value="Horizontal"/>
                        </Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Width" Value="100"/>
                            <Setter Property="Margin" Value="10 10"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Width" Value="250"/>
                            <Setter Property="Margin" Value="10 10"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                        <Style TargetType="xctk:AutoSelectTextBox" >
                            <Setter Property="Width" Value="250"/>
                            <Setter Property="Margin" Value="10 10"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>                        
                    </WrapPanel.Resources>
                    <StackPanel>
                    <TextBlock Text="Mã sản phẩm" />
                    <xctk:AutoSelectTextBox Text="{Binding Code}" />
                    </StackPanel>
                    
                    <StackPanel>
                    <TextBlock Text="Tên sản phẩm" />
                    <xctk:AutoSelectTextBox Text="{Binding Title}" />
                    </StackPanel>
                    <StackPanel>
                    <TextBlock Text="Hãng sản xuất" />
                    <xctk:AutoSelectTextBox Text="{Binding Source}" />
                    </StackPanel>
                    <StackPanel>
                    <TextBlock Text="Quy cách"/>
                    <xctk:AutoSelectTextBox Text="{Binding Size}" />
                    </StackPanel>
                    <StackPanel>
                    <TextBlock Text="Chất liệu" />
                    <xctk:AutoSelectTextBox Text="{Binding Material}" />
                    </StackPanel>
                    
                    <StackPanel>
                    <TextBlock Text="Giá"/>
                    <xctk:AutoSelectTextBox  Text="{Binding NormalPrice}"/>
                    </StackPanel>
                    
                    <StackPanel>
                    <TextBlock Text="Chiết khấu"/>
                    <xctk:AutoSelectTextBox Text="{Binding Discount}"  />
                    </StackPanel>
                    <StackPanel>
                            <TextBlock Text="Mô tả" VerticalAlignment="Center"  />
                        <xctk:AutoSelectTextBox Text="{Binding Discription}"  />
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Tồn kho" VerticalAlignment="Center"  />
                    <xctk:AutoSelectTextBox IsReadOnly="True" Text="{Binding CountRemain}" />
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Nhập hàng" VerticalAlignment="Center"  />
                        <xctk:AutoSelectTextBox IsReadOnly="True" Text="{Binding CountImported}" />
                    </StackPanel>
                    <StackPanel DataContext="{Binding FileDlg}">
                        <xctk:AutoSelectTextBox IsReadOnly="True" Text="{Binding FileName}"/>
                        <Button Content="Browse" MaxHeight="30" Command="{Binding OpenCommand}" />
                    </StackPanel>
                    <StackPanel>
                    <Image Source="{Binding Image}" Height="100"/>
                    </StackPanel>
                </WrapPanel>
                <StackPanel Orientation="Horizontal">
                    <Button Content="Lưu" Command="{Binding SaveCommand}" HorizontalAlignment="Left" />
                    <Button Content="Tạo mới" Command="{Binding ElementName=rootForm, Path=DataContext.NewProductCommand}" HorizontalAlignment="Left"/>
                    <Button Content="Xóa" Command="{Binding RemoveCommand}" HorizontalAlignment="Left"/>
                </StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
